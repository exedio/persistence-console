package com.exedio.cope.console;

import static com.exedio.cope.console.EnvironmentCop.TEST_INFO_KEY_CONNECT_PROPERTIES;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;
import java.util.TreeSet;

import edu.umd.cs.findbugs.annotations.SuppressFBWarnings;

final class Environment_Jspm extends Console_Jspm
{
	static final void writeCurrent(final Out out, final String dialect, final java.util.Properties properties)
	{
		%>
		<table>
			<caption>Current</caption><%
			for(final String name : new TreeSet<String>(keySet(properties)))
			{
			%>
			<tr>
				<th><%=name%></th>
				<td class="text"><%=properties.getProperty(name)%></td>
			</tr><%
			}
			%>
			<tr>
				<th>dialect</th>
				<td class="text"><%=dialect%></td>
			</tr>
		</table><%
	}

	@SuppressWarnings({"unchecked", "rawtypes"})
	private static final Set<String> keySet(final java.util.Properties properties)
	{
		return (Set)properties.keySet();
	}

	private static final String[] TEST_INFO_KEYS = new String[] {
			"database.name",
			"database.version",
			"driver.name",
			"driver.version",
			"name",
			TEST_INFO_KEY_CONNECT_PROPERTIES,
		};

	static final void writeTest(final Out out, final java.util.Properties current, final HashMap<String,?>[] properties)
	{
		%>
		<hr>
		<table>
			<caption>Tested (<a href="https://exedio.github.io/testprotocol.html" target="_blank">more...</a>)</caption><%
		if(properties!=null)
		{
			%>
			<tr><%
				for(int j = 0; j<TEST_INFO_KEYS.length; j++)
				{
				%>
				<th><%=TEST_INFO_KEYS[j]%></th><%
				}
				%>
			</tr><%
			writeTestBody(out, current, properties);
		}
		else
		{
			%>
			<tr>
				<td class="text">
					No such file available from class loader.
					<br>
					This should not happen with any officially distributed jar files for cope.
				</td>
			</tr><%
		}
		%>
		</table><%
	}

	@SuppressFBWarnings("WMI_WRONG_MAP_ITERATOR")
	static final void writeTestBody(final OutBasic out, final java.util.Properties current, final HashMap<String,?>[] properties)
	{
			for(int i = 0; i<properties.length; i++)
			{
				final HashMap<String,?> db = properties[i];
			%>
			<tr><%
				int rowspanBefore = Integer.MIN_VALUE;

				for(int j = 0; j<TEST_INFO_KEYS.length; j++)
				{
					final String key = TEST_INFO_KEYS[j];
					Object value = db.get(key);
					if(value==null)
						value = "";
					int rowspan = properties.length - i;
					for(int k = i+1; k<properties.length; k++)
					{
						if(!value.equals(properties[k].get(key)))
						{
							rowspan = k - i;
							break;
						}
					}
					if(rowspan<=0)
						throw new RuntimeException();

					if(i==0 || !value.equals(properties[i-1].get(key)))
					{
				%>
				<td class="text"<%
					if(rowspan!=1){ %> rowspan="<%=rowspan%>"<% }
					if(value.equals(current.get(key))){ %> bgcolor="#cff"<% }
					%>><%
					if(value instanceof Map)
					{
						@SuppressWarnings("unchecked")
						final Map<String,String> valueMap = (Map<String,String>)value;
						for(final Iterator<String> k = valueMap.keySet().iterator(); k.hasNext(); )
						{
							final String mapKey = k.next();
							final String mapValue = valueMap.get(mapKey);
							%><%=mapKey%>=<%=mapValue%><br><%
						}
					}
					else
					{
						%><%=(String)value%><%

						if(rowspan!=1 && rowspanBefore!=rowspan)
						{
							%> <small>(<%=rowspan%>x)</small><%
						}
						rowspanBefore = rowspan;
					}
					%></td><%
					}
				}
				%>
			</tr><%
			}
	}
}%>